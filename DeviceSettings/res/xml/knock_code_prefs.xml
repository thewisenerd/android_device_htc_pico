<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/knock_code_activity_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter current Knock Code:"
                android:textIsSelectable="false"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/knock_code_activity_title_footer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default code is 1234"
                android:textIsSelectable="false" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <View
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_centerHorizontal="true"
                android:visibility="invisible" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/knock_code_user_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_centerHorizontal="true"
                android:textIsSelectable="false"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <View
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_centerHorizontal="true"
                android:visibility="invisible" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <View android:id="@+id/strut"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"
                android:visibility="invisible" />

            <Button
                android:id="@+id/kc_button1"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_alignRight="@id/strut"
                android:layout_alignParentLeft="true"
                android:text="1"/>

            <Button
                android:id="@+id/kc_button2"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_alignLeft="@id/strut"
                android:layout_alignParentRight="true"
                android:text="2"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <View android:id="@+id/strut2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"
                android:visibility="invisible" />

            <Button
                android:id="@+id/kc_button4"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_alignRight="@id/strut2"
                android:layout_alignParentLeft="true"
                android:text="4"/>

            <Button
                android:id="@+id/kc_button3"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_alignLeft="@id/strut2"
                android:layout_alignParentRight="true"
                android:text="3"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <View
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:visibility="invisible" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <View android:id="@+id/strut3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"
                android:visibility="invisible" />

            <Button
                android:id="@+id/kc_button_continue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/strut3"
                android:layout_alignParentRight="true"
                android:text="Continue"/>

            <Button
                android:id="@+id/kc_button_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/strut3"
                android:layout_alignParentLeft="true"
                android:text="Cancel"/>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>
